#!/bin/bash

# 現在のパスを保持.
NOW_PATH=` pwd`

# RHIGIN_HOMEが設定されていない場合. 
if [ "${RHIGIN_HOME}" = "" ]; then
    # 現在ユーザの.profileにRHIGIN_HOMEを設定.
    TARGET_DIR=$(cd $(dirname $0); pwd)
    echo "export RHIGIN_HOME=${TARGET_DIR}" >> ~/.profile
    echo 'export PATH=${PATH}:${RHIGIN_HOME}' >> ~/.profile
    source ~/.profile
fi

# RHIGIN_HOMEに移動.
cd ${RHIGIN_HOME}

chmod 755 rbatch
chmod 755 rcons
chmod 755 rdown
chmod 755 rhigin
chmod 755 rid
chmod 755 rkey
chmod 755 rlib
chmod 755 rproj
chmod 755 rtest
chmod 755 sub/
chmod 755 sub/classpath.sh

chmod 755 ../components/jdbc/bin/*

# 元のパスに戻る.
cd ${NOW_PATH}
exit 0